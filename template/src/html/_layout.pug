doctype html
html(lang="ja" data-build-mode=`${self.htmlWebpackPlugin.options.buildMode}`)
  head
    meta(charset="UTF-8")
    meta(
      http-equiv="content-language"
      content="ja"
    )
    meta(
      name="viewport"
      content="width=device-width, initial-scale=1"
    )
    link(
      rel="preconnect"
      href="https://fonts.googleapis.com"
    )
    link(
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin=""
    )
    include ./component/_webfont.pug
    link(
      rel="icon"
      href=`${self.htmlWebpackPlugin.options.staticPath}favicon.ico`
    )
    block metas
  body
    include ./component/_paper.pug
    header#header
      block header
    div#content
      block contents
    footer#footer
      block footer
